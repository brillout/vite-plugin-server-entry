{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist/esm/",
    "module": "Node16",
    "moduleResolution": "Node16",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "rootDir": "./src/",
  "include": ["src/**/*"]
}
